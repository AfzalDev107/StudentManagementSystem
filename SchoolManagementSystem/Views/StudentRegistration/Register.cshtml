<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

<!-- jQuery Validation Plugin -->
<script src="https://cdn.jsdelivr.net/jquery.validation/1.19.3/jquery.validate.min.js"></script>


    <script>

    let qualificationIndex = 1;

    function addQualification() {
        const qualificationDiv = `
                <div class="qualification-item row">
                    <div class="col-md-6 mb-3">
                        <label>Course Name</label>
                        <input name="Qualifications[${qualificationIndex}].CourseName" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>University</label>
                        <input name="Qualifications[${qualificationIndex}].University" class="form-control" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Year</label>
                        <input name="Qualifications[${qualificationIndex}].Year" type="number" class="form-control" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Percentage</label>
                        <input name="Qualifications[${qualificationIndex}].Percentage" type="number" class="form-control" />
                    </div>
                </div>`;

        $('#qualifications').append(qualificationDiv);
        qualificationIndex++;
    }


</script>
